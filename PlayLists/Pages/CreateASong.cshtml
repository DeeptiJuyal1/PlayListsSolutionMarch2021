@page
@model PlayLists.Pages.CreateASongModel
@{
}


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

<h2>Add A Song</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Song.Title"></label>
        <input class="form-control" asp-for="Song.Title" />
        <span asp-validation-for="Song.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Song.Artist"></label>
        <input class="form-control" asp-for="Song.Artist" />
        <span asp-validation-for="Song.Artist"></span>
    </div>
    <button type="submit" class="btn btn-success">Add This Song</button>
</form>